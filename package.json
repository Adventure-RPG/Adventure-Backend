{
  "name": "isomer",
  "version": "0.2.5",
  "description": "A simple isometric graphics library for HTML5 canvas",
  "author": "Jordan Scales <scalesjordan@gmail.com>",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jdan/isomer.git"
  },
  "keywords": [
    "isometric",
    "graphics",
    "canvas",
    "3D"
  ],
  "main": "index.js",
  "scripts": {
    "dist": "gulp",
    "test": "gulp test",

    "prestart": "npm install",
    "start": "node server",

    "prebuild-css": "npm install",
    "build-css": "node-sass --include-path app/assets/scss app/assets/scss/build.scss app/app.css",
    "prewatch-css": "npm run build-css",
    "watch-css": "node-sass -w --include-path app/assets/scss app/assets/scss/build.scss app/app.css"
  },
  "devDependencies": {
    "event-stream": "^3.3.0",
    "gulp": "^3.8.11",
    "gulp-buffer": "0.0.2",
    "gulp-header": "^1.2.2",
    "gulp-util": "^3.0.4",
    "gulp-webpack": "^1.3.2",
    "jscs": "^1.12.0",
    "jscs-loader": "0.0.5",
    "open": "0.0.5",
    "node-sass": "^3.4.2",
    "spa-server": "^0.1.0",
    "strftime": "^0.9.0",
    "webpack": "^1.8.2",
    "webpack-dev-server": "^1.8.0"
  }
}
